{
  "name": "userbot",
  "version": "1.0.0",
  "description": "Userbot centralizzato Telegram & WhatsApp con supporto media e Redis",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "docs": "typedoc && cp -r docs/* ./docs/api",
    "test": "jest --coverage"
  },
  "dependencies": {
    "@whiskeysockets/baileys": "^6.7.5",
    "axios": "^1.6.8",
    "dotenv": "^16.4.5",
    "ffmpeg-static": "^5.2.0",
    "form-data": "^4.0.0",
    "ioredis": "^5.3.2",
    "mongodb": "^6.5.0",
    "pg": "^8.11.3",
    "redis": "^4.6.13",
    "sharp": "^0.33.2",
    "telegraf": "^4.16.3",
    "typeorm": "^0.3.20",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.30",
    "@types/sharp": "^0.33.0",
    "@types/uuid": "^9.0.8",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "ts-node-dev": "^2.0.0",
    "typedoc": "^0.25.13",
    "typedoc-plugin-markdown": "^3.17.1",
    "typescript": "^5.4.5",
    "jest-junit": "^16.0.0",
    "xml2js": "^0.6.2"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "collectCoverageFrom": ["src/**/*.{ts,js}"],
    "coverageDirectory": "coverage",
    "coverageReporters": ["text", "lcov"],
    "reporters": [ "default", [ "jest-junit", { "outputDirectory": "test-results", "outputName": "junit.xml" } ] ]
  }
}
